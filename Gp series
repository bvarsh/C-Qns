#include <bits/stdc++.h>

using namespace std;

int a,r,N;
// Driver code
int main()
{
	// starting number
	cout<<"Enter the first term: ";
	cin >> a;
	cout<<"Enter the common ratio : ";
	cin >> r;
	cout<<"Enter the Nth term: ";
	cin >> N;



	int Gp=(a * (int)(pow(r, N - 1)));
	cout << "The " << N << "th term of the series is : "
		<< Gp;

	return 0;
}
